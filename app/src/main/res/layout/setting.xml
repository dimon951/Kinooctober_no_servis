<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fon_setting">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет фона"
            android:id="@+id/textView_edit_fon_color"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_fon_color"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет постов"
            android:id="@+id/textView_edit_color_posty"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_color_posty"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет постов/2"
            android:id="@+id/textView_edit_color_posty2"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_color_posty2"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет текста"
            android:id="@+id/textView_edit_color_text"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_color_text"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />
    </LinearLayout>

    <Button
        android:text="Изменить шрифт"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button_edit_fonts"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="edit_fonts"
        android:background="@android:color/transparent" />


</LinearLayout>
